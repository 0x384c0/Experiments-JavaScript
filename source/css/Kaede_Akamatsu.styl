#Kaede_Akamatsu_Button
  position: relative
  display: inline-block
  background #ff0500

  &:hover
    #Kaede_Akamatsu
      animation Kaede_Akamatsu_Keyframe 0.4s cubic-bezier(.63,1.59,.53,.91)
      -webkit-animation Kaede_Akamatsu_Keyframe 0.4s cubic-bezier(.63,1.59,.53,.91)
      opacity: 1
      display block

#Kaede_Akamatsu
  display none
  position: absolute
  bottom: 100%
  opacity: 0
  transform-origin 50% 100%
  -webkit-transform-origin 50% 100%


  @keyframes {Kaede_Akamatsu_Keyframe}
    0%
      display: none
      opacity: 0
      transform scaleY(0.75)
      -webkit-transform scaleY(0.75)
    1%
      display: block
    100%
      display: block
      opacity: 1
      transform scaleY(1)
      -webkit-transform scaleY(1)